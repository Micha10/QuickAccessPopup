	{
		gosub, OpenFavoriteGetFullLocation ; sets g_strFullLocation

		if !StrLen(g_strFullLocation) ; OpenFavoriteGetFullLocation was aborted
		{
			gosub, OpenFavoriteCleanup
			return
		}
	}
}

; preparation for window position

